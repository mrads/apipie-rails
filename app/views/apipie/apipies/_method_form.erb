<div class="row">
  <div class="span4">
    <h3><%= t('apipie.form_example') %></h3>
    <form class="form-horizontal" role="apis">
      <div class="control-group">
        <label class="control-label" for="request"><%= t('apipie.request') %></label>
        <div class="controls">
          <select name="request">
            <% method[:apis].each do |api| %>
              <option value="<%= api[:api_url] %>"><%= api[:http_method] %> <%= api[:api_url] %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="result">
      </div>
    </form>
    <form class="form-horizontal" role="api-params">
      <%= render(:partial => "params_form", :locals => {:params => method[:params]}) if method[:params].present? %>
      <button type="submit" class="btn btn-primary pull-right"><%= t('apipie.submit') %></button>
    </form>
  </div>
  <div class="span8">
    <pre>
      <%= method.to_json %>
    </pre>
  </div>
</div>
