<div class="row">
  <div class="span4">
    <form class="form-horizontal" role="apis">
      <div class="control-group">
        <label class="control-label" for="request">Запрос</label>
        <div class="controls">
          <select class="input-block-level" name="request">
            <% method[:apis].each do |api| %>
              <option value="<%= api[:api_url] %>"><%= api[:http_method] %> <%= api[:api_url] %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="result">
      </div>
    </form>
  </div>
  <div class="span8">
    <pre>
      <%= method.to_json %>
    </pre>
  </div>
</div>
